@model AnyoneForTennis.Models.ViewModels.EditUserRolesViewModel

<h2>Edit Roles for @Model.UserName</h2>

<form asp-action="EditUserRoles" method="post">
    <input type="hidden" asp-for="UserId" />

    <div class="form-group">
        @foreach (var role in Model.AvailableRoles)
        {
            <div class="form-check">
                <input type="checkbox" class="form-check-input" name="UserRoles" value="@role"
                @(Model.UserRoles.Contains(role) ? "checked" : "") />
                <label class="form-check-label">@role</label>
            </div>
        }
    </div>

    <button type="submit" class="btn btn-success">Update Roles</button>
    <a asp-action="ManageUserRoles" class="btn btn-secondary">Cancel</a>
</form>
